#: import Window kivy.core.window.Window

<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.78,.27,.89,1)
            Rectangle:
                size: self.size
                pos: self.pos
        
        FlatButton:
            id: logout
            text: 'Logout'
            on_release: root.logout()
            size_hint: (.1,None)
            height: 30

        Label:
            text: 'Admin Dashboard'
            bold: True
            size_hint: (.8,None)
            height: 30
        
        FlatButton:
            id: quit
            text: 'Quit'
            size_hint_y: None
            size_hint_x: .1
            height: 30
            on_release: Window.close()
    BoxLayout:
        id: content_nav
        
        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.78,.20,.80,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: employee_toggle
                text: 'Manage Employees'
                size_hint_y: .1
                state: 'down'
                background_color: (.78,.29,.89,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: products_toggle
                text: 'Manage Products'
                size_hint_y: .1
                background_color: (.78,.29,.89,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: members_toggle
                text: 'Manage Members'
                size_hint_y: .1
                background_color: (.78,.29,.89,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: sales_toggle
                text: 'Manage Sales'
                size_hint_y: .1
                background_color: (.78,.29,.89,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: analysis_toggle
                text: 'Product Analysis'
                size_hint_y: .1
                background_color: (.78,.29,.89,1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            Label:
                id: sp
                text: ''
                size_hint_y: .7
        BoxLayout:
            id: all_content
            size_hint_x: .8
            padding: (20,10)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_content
                    name: 'scrn_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_contents
                        BoxLayout:
                            id: ops_fields
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add
                                text: 'Add Employee'
                                on_release: root.add_employee_fields()
                            Button:
                                id: crud_update
                                text: 'Update Employee'
                                on_release: root.update_employee_fields()
                            Button:
                                id: crud_remove
                                text: 'Remove Employee'
                                on_release: root.remove_employee_fields()
                Screen:
                    id: scrn_product_content
                    name: 'scrn_product_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_product_contents
                        BoxLayout:
                            id: ops_fields_p
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns_p
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add_p
                                text: 'Add Product'
                                on_release: root.add_product_fields()
                            Button:
                                id: crud_update_p
                                text: 'Update Product'
                                on_release: root.update_product_fields()
                            Button:
                                id: crud_remove_p
                                text: 'Remove Product'
                                on_release: root.remove_product_fields()
                Screen:
                    id: scrn_member_content
                    name: 'scrn_member_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_member_contents
                        BoxLayout:
                            id: ops_fields_m
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns_m
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add_m
                                text: 'Add Member'
                                on_release: root.add_member_fields()
                            Button:
                                id: crud_update_m
                                text: 'Update Member'
                                on_release: root.update_member_fields()
                            Button:
                                id: crud_remove_m
                                text: 'Remove Member'
                                on_release: root.remove_member_fields()
                Screen:
                    id: scrn_sale_content
                    name: 'scrn_sale_content'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_sale_contents
                        BoxLayout:
                            id: ops_fields_s
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns_s
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_update_s
                                text: 'Update Sale'
                                on_release: root.update_sale_fields()
                            Button:
                                id: crud_remove_s
                                text: 'Remove Sale'
                                on_release: root.remove_sale_fields()
                            Button:
                                id: report_s
                                text: 'Create Report'
                                on_release: root.sale_report_fields()
                Screen:
                    id: scrn_analysis
                    name: 'scrn_analysis'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            # orientation: 'vertical'
                            size_hint_y: None
                            height: 45
                            Spinner:
                                id: target_product
                                text: 'Choose Product'
                            Button:
                                id: submit_analysis
                                text: 'View Stats'
                                size_hint_x: .3
                                on_release: root.view_stats()
                        BoxLayout:
                            id: analysis_res
